{
  "src/styles/utilities.css": [
    {
      "description": "Text alignment utilities",
      "selector": ".text-center",
      "params": [
        {
          "name": "direction",
          "description": "The alignment direction (left, center, right, justify)"
        }
      ],
      "example": "<p class=\"text-center\">Centered text</p>\n<p class=\"text-left\">Left aligned text</p>\n<p class=\"text-right\">Right aligned text</p>",
      "since": "1.0.0",
      "deprecated": false
    },
    {
      "description": "Margin utilities for consistent spacing",
      "selector": ".m-0",
      "params": [
        {
          "name": "size",
          "description": "The margin size (0, 1, 2, 3, 4)"
        }
      ],
      "example": "<div class=\"m-2\">Margin on all sides</div>\n<div class=\"mt-3\">Top margin only</div>",
      "since": "1.1.0",
      "deprecated": false
    },
    {
      "description": "Padding utilities for consistent internal spacing",
      "selector": ".p-0",
      "params": [
        {
          "name": "size",
          "description": "The padding size (0, 1, 2, 3, 4)"
        }
      ],
      "example": "<div class=\"p-2\">Padding on all sides</div>\n<div class=\"px-3\">Horizontal padding only</div>",
      "since": "1.1.0",
      "deprecated": false
    },
    {
      "description": "Display utilities for controlling element visibility and layout",
      "selector": ".d-none",
      "example": "<div class=\"d-none\">Hidden element</div>\n<div class=\"d-flex\">Flexbox container</div>",
      "since": "1.2.0",
      "deprecated": false
    },
    {
      "description": "Flexbox utilities for layout control",
      "selector": ".justify-start",
      "example": "<div class=\"d-flex justify-center align-center\">\nCentered content\n</div>",
      "since": "1.2.0",
      "deprecated": false
    }
  ],
  "src/styles/card.css": [
    {
      "description": "Card component for displaying content in contained sections",
      "selector": ".card",
      "params": [
        {
          "name": "elevation",
          "description": "Shadow elevation level (0-3)"
        }
      ],
      "example": "<div class=\"card\">\n<div class=\"card-header\">Title</div>\n<div class=\"card-body\">Content goes here</div>\n</div>",
      "since": "1.2.0",
      "deprecated": false
    },
    {
      "description": "Card header section for titles and navigation",
      "selector": ".card-header",
      "example": "<div class=\"card-header\">\n<h3>Card Title</h3>\n</div>",
      "since": "1.2.0",
      "deprecated": false
    },
    {
      "description": "Card body section for main content",
      "selector": ".card-body",
      "example": "<div class=\"card-body\">\n<p>Your content goes here.</p>\n</div>",
      "since": "1.2.0",
      "deprecated": false
    },
    {
      "description": "Card footer section for actions or metadata",
      "selector": ".card-footer",
      "example": "<div class=\"card-footer\">\n<button class=\"btn btn-primary\">Action</button>\n</div>",
      "since": "1.3.0",
      "deprecated": false
    },
    {
      "description": "Elevated card variant with stronger shadow",
      "selector": ".card-elevated",
      "example": "<div class=\"card card-elevated\">\n<div class=\"card-body\">Elevated content</div>\n</div>",
      "since": "1.3.0",
      "deprecated": false
    },
    {
      "description": "Compact card variant with reduced padding",
      "selector": ".card-compact .card-header,\n.card-compact .card-body,\n.card-compact .card-footer",
      "example": "<div class=\"card card-compact\">\n<div class=\"card-body\">Compact content</div>\n</div>",
      "since": "1.3.0",
      "deprecated": false
    }
  ],
  "src/styles/button.css": [
    {
      "description": "Primary button component for user actions",
      "selector": ".btn",
      "params": [
        {
          "name": "size",
          "description": "The size variant (small, medium, large)"
        },
        {
          "name": "variant",
          "description": "The visual variant (primary, secondary, danger)"
        }
      ],
      "example": "<button class=\"btn btn-primary btn-large\">Click me</button>",
      "since": "1.0.0",
      "deprecated": false
    },
    {
      "description": "Primary button variant with brand colors",
      "selector": ".btn-primary",
      "example": "<button class=\"btn btn-primary\">Primary Action</button>",
      "since": "1.0.0",
      "deprecated": false
    },
    {
      "description": "Secondary button variant for less prominent actions",
      "selector": ".btn-secondary",
      "example": "<button class=\"btn btn-secondary\">Secondary Action</button>",
      "since": "1.0.0",
      "deprecated": false
    },
    {
      "description": "Danger button for destructive actions",
      "selector": ".btn-danger",
      "example": "<button class=\"btn btn-danger\">Delete Item</button>",
      "since": "1.0.0",
      "deprecated": true
    },
    {
      "description": "Large button size modifier",
      "selector": ".btn-large",
      "example": "<button class=\"btn btn-primary btn-large\">Large Button</button>",
      "since": "1.1.0",
      "deprecated": false
    },
    {
      "description": "Small button size modifier",
      "selector": ".btn-small",
      "example": "<button class=\"btn btn-primary btn-small\">Small Button</button>",
      "since": "1.1.0",
      "deprecated": false
    }
  ]
}